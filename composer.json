{
    "name": "frbit/message-signer",
    "version": "0.2.1",
    "license": "MIT",
    "description": "A flexible message signing and verification framework. Includes Guzzle3 and Guzzle4 Plugin.",
    "keywords": [
        "signing",
        "sign",
        "verification",
        "verify",
        "hmac",
        "openssl",
        "public key",
        "http",
        "rest",
        "client",
        "server"
    ],
    "authors": [
        {
            "name": "Ulrich Kautz",
            "email": "uk@fortrabbit.com"
        }
    ],
    "require": {
        "phpseclib/phpseclib": "*",
        "php": ">=5.4.0",
        "guzzlehttp/guzzle": "~6"
    },
    "require-dev": {
        "guzzle/guzzle": ">=3.8",
        "symfony/http-foundation": ">=2.4",
        "phpunit/phpunit": "*",
        "mockery/mockery": "*",
        "react/http": "~0.4"
    },
    "suggest": {
        "ext-openssl": "OpenSSL extension is better tested and provides faster signing and verification than the PHP only solution"
    },
    "autoload": {
        "psr-0": {
            "Frbit\\MessageSigner\\": "src/"
        }
    },
    "repositories": [

    ]
}
